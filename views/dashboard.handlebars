
    <section class="dashboard" id="dashboard">

        <h1 class="heading"> our <span>Dashboard</span> </h1>

        <div class="box-container">
        {{#each posts as |post|}}
            <div class="box">
                <div class="image">
                    <img src="{{featured_image}}" alt="">
                </div>
                <div class="content">
                    <p  class="title">  {{content_text}}</p>
                  <p><strong>By User: </strong>{{author_id}}/ 21 june, 2021</p>
                    <p><strong>Post ID: </strong>{{id}}</p>
                    <a href="#" class="btn">Comment</a>
                </div>
                <div class="icons">
                    <a href="#" class="fas fa-heart"></a>

                </div>
            </div>

        {{/each}}

        </div>

    </section>