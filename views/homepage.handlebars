
<section class="home" id="home">
    <h1 style="color:green;">FROM homepage.handlebars</h1>
    <h1 class="heading"> Your <span>Homepage</span> </h1>

    <div class="box-container">

        {{#each posts as |post|}}
            <div class="box">
                <div class="icons">
                    <a href="#" class="fas fa-heart"></a>
                    <a href="#" class="fas fa-eye"></a>
                </div>
                <div class="image">
                    <img src="{{featured_image}}" alt="">
                </div>
                <div class="content">
                    <h3>{{content_text}}</h3>
                    <p><strong>Post ID: </strong>{{id}}</p>
                    <p><strong>Author ID: </strong>{{author_id}}</p>
                </div>
            </div>
        {{/each}}

    </div>

</section>